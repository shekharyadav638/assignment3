{% set posts_cards = [] %}
{% set heading = content["field_posts_title"]%}

{% for item in content["field_post"]["#items"] %}
    {% set paragra = item.entity %}
    {% set title = paragra.field_posts_card_name.value %}
    {% set body = paragra.field_posts_card_desc.value %}
    {% set img = paragra.field_posts_card_img.entity.uri.value %}
    {% set img_src = file_url(img) %}

    {% set posts_cards = posts_cards|merge(
        [
           { 
                'name': title,
                'body': body,
                'image': img_src
            }
        ]
    ) %}            
{% endfor %}

{% include "@organisms/posts/posts.twig" with {
    'main_heading': heading,
    'items': posts_cards
} %}
