<section id="alt-services" class="alt-services section">
  <div class="container">
    <div class="row justify-content-around gy-4">
      <div
        class="features-image col-lg-6 aos-init aos-animate"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        {% include "@atoms/images/image/_image.twig" with {
            image_src: src,
            image_alt: alt
        }%}
      </div>

      <div
        class="col-lg-5 d-flex flex-column justify-content-center aos-init aos-animate"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        {% include "@atoms/text/headings/_heading.twig" with {
            heading_level: '3',
            heading: card_heading,
          } %}

        {% include "@atoms/text/text/01-paragraph.twig" with {
            paragraph_content: feature_body
        } %}

        {% for card in cards %}
            <div
                class="icon-box d-flex position-relative aos-init aos-animate"
                data-aos="fade-up"
                data-aos-delay="{{ loop.index0 * 100 + 300 }}"
            >
            {% include "@molecules/altfeature_card/card3.twig" with {
                card__subheading: card.heading,
                card__body: card.text,
                icon_src: card.icon
            }%}
            </div>
        {% endfor %}
 
      </div>
    </div>
  </div>
</section>

