<section id="stats" class="stats section">
    <div class="container section-title" data-aos="fade-up">
        {% include "@atoms/text/headings/_heading.twig" with {
            heading_level: '2',
            heading: heading
        }%}
        {% include "@atoms/text/text/01-paragraph.twig" with {
            paragraph_content: body
        } %}
    </div>
    <div class="container " data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-4">
            {% for i in items %}
                <div class="stats_body col-lg-3 col-md-6">
                    {% include "@molecules/feature_card/card2.twig" with {
                        number: i.num,
                        card__body: i.body,
                        icon_src: i.icon
                    }%}
                </div>
            {% endfor %}
        </div>
    </div>
</section>
