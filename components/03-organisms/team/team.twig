<section id="team" class="team section">
    <div class="container section-title">
        {% include "@atoms/text/headings/_heading.twig" with {
            heading_level: '2',
            heading: heading
        }%}
        {% include "@atoms/text/text/01-paragraph.twig" with {
            paragraph_content: body
        } %}
    </div>
    <div class="container">
        <div class="row gy-5">
            {% for item in items %}
                <div class="col-lg-4 col-md-6 aos-init aos-animate"
                data-aos="fade-up"
                data-aos-delay="{{ loop.index0 * 100 + 100 }}">
                    {% include "@molecules/team_member/card.twig" with {
                        img_src: item.image,
                        img_alt: 'member-image',
                        heading_content: item.name,
                        job_role: item.position,
                        card__body: item.body
                    }%}
                </div>
            {% endfor %}
        </div>
    </div>
</section>