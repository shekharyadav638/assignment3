<section id="projects" class="projects section">
    <div class="container section-title aos-init aos-animate" data-aos="fade-up">
        {% include "@atoms/text/headings/_heading.twig" with {
            heading_level: '2',
            heading: heading
        }%}
        {% include "@atoms/text/text/01-paragraph.twig" with {
            paragraph_content: body
        } %}
    </div>

  <div class="container">
    <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
        <ul class="portfolio-filters isotope-filters aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
            {% for item in lists %}
                {% include "@atoms/lists/_list-item.twig" with {
                    list__item__content: item.content,
                    filter: item.filter,
                    additional_class: item.class
                }%}
            {% endfor %}
        </ul>
        <div class="row gy-4 isotope-container aos-init aos-animate" data-aos="fade-up" data-aos-delay="200">
            {% for card in cards %}
                {% include "@molecules/projects_card/project.twig" with {
                    filter_class: card.filter,
                    title: card.title,
                    description: card.description,
                    img_src: card.img,
                    gallery_class: card.class,
                    details_link: card.details
                }%}
            {% endfor %}
        </div>
    </div>
  </div>
</section>
