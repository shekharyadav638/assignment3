<section id="blog" class="posts section">
    <div class="container section-title">
        {% include "@atoms/text/headings/_heading.twig" with {
            heading_level: '2',
            heading: card_heading,
          } %}

        {% include "@atoms/text/text/01-paragraph.twig" with {
            paragraph_content: body,
        } %}
    </div>
    <div class="container">
        <div class="row gy-5">    
            {% for item in items %}
                <div class="col-xl-4 col-md-6">
                    {% include "@molecules/blog/blog.twig" with {
                        img_src: item.image,
                        img_alt: 'post-image',
                        heading_content: item.body,
                        blog_name: item.name,
                        blog_topic: item.topic,
                        date: item.date,
                        link_url: item.url,
                        link_text: item.link_text
                    }%}
                </div>
            {% endfor %}    
        </div>
    </div>
</section>