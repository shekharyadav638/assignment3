<section id="clients" class="clients section">
    <div class="container section_title">
        {% include "@atoms/title/title.twig" with {
            title_content: 'clients',
        } %}
        {% include "@atoms/text/text/01-paragraph.twig" with {
            paragraph_content: 'We work with best Clients',
        } %}
    </div>
    <div class="container">
        <div class="clients-slider">    
            {% for item in items %}
                <div class="slider-wrapper align-items-center">
                    {% include "@atoms/images/image/_image.twig" with {
                        image_src: item.src,
                        image_alt: 'icon'
                    }%}
                </div>
            {% endfor %}
        </div>
    </div>
</section>