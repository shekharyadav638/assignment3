<section id="pricing" class="pricing section">
    <div class="container section_title">
        {% include "@atoms/title/title.twig" with {
            title_content: 'Pricing',
        } %}
        {% include "@atoms/text/text/01-paragraph.twig" with {
            paragraph_content: 'Check our Affordable Pricing',
        } %}
    </div>
    <div class="container">
        <div class="row gy-4">
            {% for item in items %}
                <div class="col-lg-3 col-md-6">
                    {% include "@molecules/pricing_card/price.twig" with {
                        heading_content: item.plan,
                        heading_clr: item.clr,
                        price_val: item.price,
                        icon_src: item.icon,
                        icon_clr: item.clr,
                        lists: item.prices,
                        link_class: 'btn-buy',
                        feature_text: item.featured
                    }%}
                </div>
            {% endfor %}
        </div>
    </div>

</section>
