<div class="card-item">
  <div class="row">
    <div class="col-xl-5">
      <div class="card-bg">
        {% include "@atoms/images/image/_image.twig" with {
            image_src: img,
            image_alt: img_alt
        } %}
      </div>
    </div>
    <div class="col-xl-7 d-flex align-items-center">
      <div class="card-body">
        {% include "@atoms/text/headings/_heading.twig" with {
            heading_level: '4',
            heading: card_title
        } %}
        {% include "@atoms/text/text/01-paragraph.twig" with {
            paragraph_content: card_body
        } %}
      </div>
    </div>
  </div>
</div>
