<div class="our-story">
  {% include "@atoms/text/headings/_heading.twig" with {
    heading_level: '4',
    heading: card_heading,
  } %}
  {% include "@atoms/text/headings/_heading.twig" with {
    heading_level: '5',
    heading: card_subheading,
  } %}

  {% include "@atoms/text/text/01-paragraph.twig" with {
    paragraph_content: card_body1
  } %}
  
  <ul>
    {% for item in lists %}
      {% include "@atoms/lists/_list-item.twig" with {
        icon_src: 'bi bi-check-circle',
        list__item__content: item.content
      }%}
    {% endfor %} 
  </ul>

  {% include "@atoms/text/text/01-paragraph.twig" with {
    paragraph_content: card_body2
  } %}

  <div class="watch-video d-flex align-items-center position-relative">
    <i class="bi bi-play-circle"></i>
    {% include "@atoms/links/link/link.twig" with {
      link_url: url,
      add_class: class,
      link_content: 'Watch Video'
    }%}
  </div>
</div>
