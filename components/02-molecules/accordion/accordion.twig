<div
  class="tab-pane fade {{active_class}}"
  id="pills-{{ id }}"
  role="tabpanel"
  aria-labelledby="pills-{{ id }}-tab"
>
  <div class="row">
    <div
      class="accordion col-lg-6 order-2 order-lg-1 mt-3 mt-lg-0 d-flex flex-column justify-content-center"
    >
      {% include "@atoms/text/headings/_heading.twig" with {
        heading_level: '3',
        heading: card_heading,
      } %}
      {% include "@atoms/text/text/01-paragraph.twig" with {
        paragraph_content: card_body,
      } %}
      <ul>
        {% for item in lists %}
            {% include "@atoms/lists/_list-item.twig" with {
                icon_src: icon_src,
                list__item__content: item.content
            } %}
        {% endfor %} 
      </ul>
    </div>
    <div class="col-lg-6 order-1 order-lg-2 text-center">
      {% include "@atoms/images/image/_image.twig" with {
        image_src: img_src,
        image_alt: 'tabs-img'
    }%} 
    </div>
  </div>
</div>


